# PROMPT setting

# 設定命令開始前的動作，紀錄開始時間
preexec() {
  timer=$SECONDS
}

# 設定命令執行後的動作，計算並顯示執行時間
precmd() {
  if [[ -n $timer && $timer != 0 ]]; then
    elapsed=$(($SECONDS - $timer))
    RPROMPT="%F{yellow}${elapsed}s%f"
  else
    # 當沒有輸入新命令時，重置 RPROMPT
    RPROMPT=""
  fi
  # 重設 timer 為 0，表示沒有正在執行的命令
  timer=0
}

# 設定左側提示符，顯示當前目錄
